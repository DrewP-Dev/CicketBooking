<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="15dip" />
            <stroke android:width="1dip" android:color="@color/colorAccent" />
            <gradient android:angle="-90" android:startColor="#963A03" android:endColor="#B94904"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="15dip" />
            <stroke android:width="1dip" android:color="@color/colorAccent" />
            <solid android:color="#B64906"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="15dip" />
            <stroke android:width="1dip" android:color="@color/colorAccent" />
            <gradient android:angle="-90" android:startColor="#BD6C3A" android:endColor="#B94905" />
        </shape>
    </item>
</selector>