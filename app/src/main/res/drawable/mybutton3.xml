<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#3F65B2" />
            <gradient android:angle="-90" android:startColor="#2D4881" android:endColor="#355596"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#3F65B2" />
            <solid android:color="#2E477C"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#3F65B2" />
            <gradient android:angle="-90" android:startColor="#507FDF" android:endColor="#2E477C" />
        </shape>
    </item>
</selector>