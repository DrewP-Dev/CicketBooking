<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorSecondaryLight"
        tools:context=".CinemaDetailsActivity">

    <include
            layout="@layout/toolbar_apparent"
            android:id="@+id/cinema_details_toolbar"
    />

            <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cinema_details_toolbar"

            >

                <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:id="@+id/cinema_details_img"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                    />

                    <TextView
                            android:id="@+id/cinema_details_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/cinema_details_img"
                            android:background="@drawable/background_first"
                            android:textSize="23sp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:textColor="@color/colorDark"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginBottom="25dp"
                            android:padding="20dp"
                    />

                    <TextView
                            android:id="@+id/cinema_details_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/cinema_details_name"
                            android:background="@drawable/background_first"
                            android:textSize="18sp"
                            android:textColor="@color/colorDark"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginBottom="10dp"
                            android:padding="10dp"
                    />

                    <TextView
                            android:id="@+id/cinema_details_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/cinema_details_location"
                            android:background="@drawable/background_first"
                            android:textSize="18sp"
                            android:textColor="@color/colorDark"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginBottom="10dp"
                            android:padding="10dp"
                    />

                    <TextView
                            android:id="@+id/cinema_details_contact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/cinema_details_address"
                            android:background="@drawable/background_first"
                            android:textSize="18sp"
                            android:textColor="@color/colorDark"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginBottom="10dp"
                            android:padding="10dp"
                    />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>