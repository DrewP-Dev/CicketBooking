<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorSecondaryLight"
        tools:context=".MovieDetailsActivity">

    <include
            layout="@layout/toolbar_apparent"
            android:id="@+id/movie_details_toolbar"
    />

    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/movie_details_toolbar"

    >

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/movie_details_img"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
            />

            <TextView
                    android:id="@+id/movie_details_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/movie_details_img"
                    android:background="@drawable/background_first"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/colorDark"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="25dp"
                    android:padding="20dp"
            />

            <TextView
                    android:id="@+id/movie_details_tag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/movie_details_title"
                    android:background="@drawable/background_first"
                    android:textSize="18sp"
                    android:textColor="@color/colorDark"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp"
            />

            <TextView
                    android:id="@+id/movie_details_director"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/movie_details_tag"
                    android:background="@drawable/background_first"
                    android:textSize="18sp"
                    android:textColor="@color/colorDark"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp"
            />

            <TextView
                    android:id="@+id/movie_details_cast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/movie_details_director"
                    android:background="@drawable/background_first"
                    android:textSize="18sp"
                    android:textColor="@color/colorDark"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp"
            />

            <Button
                    android:id="@+id/show_desc_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/movie_details_cast"
                    android:background="@drawable/mybutton2"
                    android:text="@string/show_movie_description"
                    android:textSize="20sp"
                    android:textAllCaps="false"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
            />

            <Button
                    android:id="@+id/hide_desc_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/movie_details_cast"
                    android:background="@drawable/mybutton2"
                    android:text="@string/hide_movie_description"
                    android:textSize="20sp"
                    android:textAllCaps="false"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
            />

            <TextView
                    android:id="@+id/movie_details_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hide_desc_btn"
                    android:background="@drawable/background_first"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:textColor="@color/colorDark"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:padding="10dp"
            />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>